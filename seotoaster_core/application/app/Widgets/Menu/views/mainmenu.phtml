<?php if(!empty($this->pages)): ?>
<ul class="main_menu">
    <?php $i = 1; ?>
    <?php foreach ($this->pages as $key => $page): ?>
        <li class="category cat-<?php echo $i++; ?>"><a title="<?php echo $page['h1']; ?>" href="<?php echo $this->websiteUrl . str_replace('index.html', '', $page['url']); ?>"><?php echo $page['navName'] ; ?></a>
