                <ul class="<?php echo str_replace('.html', '', $page['url']); ?>">
                    <?php foreach ($page['subPages'] as $subPage): ?>
                        <li class="page"><a title="<?php echo $subPage['h1']; ?>" href="<?php echo $this->websiteUrl . str_replace('index.html', '', $subPage['url']); ?>"><?php echo $subPage['navName'] ; ?></a></li>
                    <?php endforeach; ?>
                </ul>
            <?php endif; ?>
        </li>
    <?php endforeach; ?>
</ul>
<?php endif; ?>